@page
@model SignalRAssignment.Pages.CustomerPages.LoginFormModel

@{
    ViewData["Title"] = "LoginForm";
}

<h1>LoginForm</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary-class="text-danger"></div>
            <div class="form-group">
                <label for="username">User Name</label>
                <input asp-for="Account.UserName" class="form-control" />
                <span asp-validation-for="Account.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input asp-for="Account.Password" type="password" class="form-control" />
                <span asp-validation-for="Account.Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Log in</button>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
